
<CalcButton@Button>:
    #Custom Button Design
    font_size: 70
    background_normal: ""
    background_color: 63/255.0,81/255.0,181/255.0,1
<CalcLayout>:
    #Main App Layout
    data: input_data
    id: cal
    BoxLayout:
        padding: 0,10,0,0
        pos_hint: {'top': 1}
        size_hint_y: 0.07        
        Label:
            size_hint_x: 0.7
        Button:
            text: ""
            background_normal: "res/3dot_menu.png"
            size_hint_x: 0.1
    GridLayout:
        size_hint_y: 0.9
        rows: 5
        AnchorLayout:
            anchor_y: "top"
            anchor_x: "right"
            Label:
                id: input_data
                text: cal.data_text
                color: 116/255.0,116/255.0,116/255.0,1
                font_size: 100
        BoxLayout:
            size_hint_y: 0.5
            CalcButton:
                text: "7"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "8"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "9"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "+"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            size_hint_y: 0.5
            CalcButton:
                text: "4"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "5"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "6"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "-"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            size_hint_y: 0.5
            CalcButton:
                text: "1"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "2"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "3"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "*"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            size_hint_y: 0.5
            CalcButton:
                text: "Del"
                on_press: cal.valEnter("")
            CalcButton:
                text: "0"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "="
                on_press: cal.calc(input_data.text)
            CalcButton:
                text: "/"
                on_press: cal.valEnter(self.text)

