
<CalcButton@Button>:
    #Custom Button Design
    font_size: 70
    background_normal: ""
    background_color: 0/255.0,175/255.0,102/255.0,1

<CalcLayout>:
    #Main App Layout
    data: input_data
    id: cal
    AnchorLayout:
        anchor_y: "top"
        anchor_x: "center"
        Label:
            id: input_data
            text: cal.data_text
            color: 0,0,0,1
            font_size: 100
            multiline: True
            size_hint_y: 0.4
    GridLayout:
        size_hint_y: 0.6
        rows: 4
        BoxLayout:
            CalcButton:
                text: "7"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "8"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "9"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "+"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "4"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "5"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "6"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "-"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "1"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "2"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "3"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "*"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "C"
                on_press: cal.valEnter("")
            CalcButton:
                text: "0"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "="
                on_press: cal.calc(input_data.text)
            CalcButton:
                text: "/"
                on_press: cal.valEnter(self.text)

