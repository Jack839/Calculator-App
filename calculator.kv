#: import pi math.pi

<CalcButton@Button>:
    #Custom Button Design 1
    font_size: 70
    background_normal: ""
    background_color: 63/255.0,81/255.0,181/255.0,1
<CalcButton2@Button>:
    #Custom Button Design 2
    font_size: 70
    background_normal: ""
    background_color: 136/255.0,14/255.0,79/255.0,1
<CalcLayout>:
    #Main App Layout
    id: cal
    Popup:
        id: pop
        size_hint_y: 0.318
        separator_height: 0
        pos_hint: {'right': 1, 'top': 0.3}
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            pos: root.pos
            size: self.size
            text: "Hello"
            color: 1,1,1,1
    BoxLayout:
        padding: 0,10,0,0
        pos_hint: {'top': 1}
        size_hint_y: 0.07
        Button:
            text: " Info"
            color: 116/255.0,116/255.0,116/255.0,1
            font_size: 50
            background_normal: ""
            background_down: ""
            background_color: 1,1,1,1
            size_hint_x: 0.1
            on_release: pop.open(self)
        Label:
            size_hint_x: 0.7
    PageLayout:
        GridLayout:
            size_hint_y: 0.9
            rows: 5
            AnchorLayout:
                anchor_y: "top"
                anchor_x: "right"
                Label:
                    id: input_data
                    text: cal.data_text
                    color: 116/255.0,116/255.0,116/255.0,1
                    font_size: 100
            BoxLayout:
                size_hint_y: 0.5
                CalcButton:
                    text: "7"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "8"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "9"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "+"
                    on_release: cal.valEnter(self.text)
            BoxLayout:
                size_hint_y: 0.5
                CalcButton:
                    text: "4"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "5"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "6"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "-"
                    on_release: cal.valEnter(self.text)
            BoxLayout:
                size_hint_y: 0.5
                CalcButton:
                    text: "1"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "2"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "3"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "*"
                    on_release: cal.valEnter(self.text)
            BoxLayout:
                size_hint_y: 0.5
                CalcButton:
                    text: "Del"
                    on_release: cal.valEnter("")
                CalcButton:
                    text: "0"
                    on_release: cal.valEnter(self.text)
                CalcButton:
                    text: "="
                    on_release: cal.calc(input_data.text)
                CalcButton:
                    text: "/"
                    on_release: cal.valEnter(self.text)
        GridLayout:
            size_hint_y: 0.9
            rows: 5
            AnchorLayout:
                anchor_y: "top"
                anchor_x: "right"
            BoxLayout:
                size_hint_y: 0.5
                CalcButton2:
                    text: "    sin"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    cos"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    tan"
                    on_release: cal.valEnter(self.text[4:])
            BoxLayout:
                size_hint_y: 0.5
                CalcButton2:
                    text: "    ln"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    log"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    !"
                    on_release: cal.valEnter(self.text[4:])
            BoxLayout:
                size_hint_y: 0.5
                CalcButton2:
                    text: "    Ï€"
                    on_release: cal.valEnter(str(pi))
                CalcButton2:
                    text: "    e"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    ^"
                    on_release: cal.valEnter("**")
            BoxLayout:
                size_hint_y: 0.5
                CalcButton2:
                    text: "    ("
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    )"
                    on_release: cal.valEnter(self.text[4:])
                CalcButton2:
                    text: "    %"
                    on_release: cal.valEnter(self.text[4:])

