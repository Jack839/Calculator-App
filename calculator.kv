
<CalcButton@Button>:
    #Custom Button Design
    font_size: 70
    background_normal: "res/calc_button.png"

<CalcLayout>:
    #Main App Layout
    data: input_data
    id: cal
    BoxLayout:
        TextInput:
            id: input_data
            text: ""
            font_size: 70
            multiline: False            
            pos_hint_y: {"top": 1}
    GridLayout:
        size_hint_y: 0.66
        rows: 4
        BoxLayout:
            CalcButton:
                text: "7"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "8"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "9"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "+"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "4"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "5"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "6"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "-"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "1"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "2"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "3"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "*"
                on_press: cal.valEnter(self.text)
        BoxLayout:
            CalcButton:
                text: "C"
                on_press: cal.valEnter("")
            CalcButton:
                text: "0"
                on_press: cal.valEnter(self.text)
            CalcButton:
                text: "="
                on_press: cal.calc(input_data.text)
            CalcButton:
                text: "/"
                on_press: cal.valEnter(self.text)

