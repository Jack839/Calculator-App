
<CalcButton@Button>:
    #Custom Button Design
    font_size: 30
    background_normal: "res//calc_button.png"

<CalcLayout>:
    #Main App Layout
    data: input_data
    rows: 5
    id: cal
    BoxLayout:
        TextInput:
            id: input_data
            text: ""
            font_size: 32
            multiline: False            
    BoxLayout:
        CalcButton:
            text: "7"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "8"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "9"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "+"
            on_press: cal.valEnter(self.text)
    BoxLayout:
        CalcButton:
            text: "4"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "5"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "6"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "-"
            on_press: cal.valEnter(self.text)
    BoxLayout:
        CalcButton:
            text: "1"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "2"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "3"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "*"
            on_press: cal.valEnter(self.text)
    BoxLayout:
        CalcButton:
            text: "C"
            on_press: cal.valEnter("")
        CalcButton:
            text: "0"
            on_press: cal.valEnter(self.text)
        CalcButton:
            text: "="
            on_press: cal.calc(input_data.text)
        CalcButton:
            text: "/"
            on_press: cal.valEnter(self.text)

